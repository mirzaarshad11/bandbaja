@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>
    <title>AddItems</title>
    <style>
        .set {
            width:50%;
            border-color:blue;
            
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <h1 style="text-align:center">Add New Item</h1>
            <form action="~/ShopHome/Add_NewItem" method="post" enctype="multipart/form-data">
            <label for="file">Upload Image:</label> 

            <input type="file" name="File" id="file" style="width: 100%;" required /><br />
            <input type="text" name="Name" class="set" placeholder="Enter-Item Name" required /><br/><br />
            <input type="text" name="Price" class="set" placeholder="Enter_Item Price" required /><br/><br />
            <input type="text" name="Description" style="width:50%;height:80px; " placeholder="Enter_Item Description" required /><br/><br />
            <input type="text" name="Model" class="set" placeholder="Enter_Item Model" required /><br/><br />
            <input type="submit" value="Add Item" />
            </form>
        </div>
        <div class="col-xs-3"></div>
    </div>
</body>
</html>
